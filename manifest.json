{
  "manifest_version": 3,
  "name": "Open in Coder",
  "description": "Добавляет кнопку для открытия файлов в Coder",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*", "https://gitlab.com/*", "https://your-selfhosted-gitlab.com/*"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html"
}
